@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Here are the available contacts:</h1>

@foreach(var Contact in @Model)
{
  <div class="well">
    <div class="form-group">
    <p>Name: @Contact.GetName() </p>
    <p>PhoneNumber: @Contact.GetPhoneNumber() </p>
    <p>Address: @Contact.GetAddress() </p>
    <form action="/contacts-view/@Contact.GetId()" method="post">
      <button name="view-button" type="submit" value=@Contact.GetId()>View!</button>
    </form>
    <form action="contacts-clear" method="post">
      <button name="delete-button" type="submit" value=@Contact.GetId()>Delete!</button>
    </form>
    </div>
  </div>
}

<form action="contacts-clear-all" method="post">
  <button name="delete-button" type="submit" value="all">Delete All!</button>
</form>
